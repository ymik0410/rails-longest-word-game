<div class="container">
  <h1 class="title">New game</h1>
  <ul><% @letters.each do |letter| %>
    <li class="letters"><%= letter %></li>
    <%end %>
  </ul>
  <h3>What is the longest word you can find?</h3>
  <form action="/score" method="post">
    <input class="box" type="text" name="answer">
    <input type="text" name="letters" value="<%= @letters.join %>" hidden>
    <input type="submit" value="Play" class="btn">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
